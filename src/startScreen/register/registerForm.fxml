<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="150.0" prefWidth="280.0"
          xmlns="http://javafx.com/javafx/8" fx:controller="startScreen.register.RegisterController">
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        <RowConstraints/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints maxWidth="142.0" minWidth="10.0" percentWidth="60.0" prefWidth="127.0"/>
        <ColumnConstraints maxWidth="91.0" minWidth="10.0" percentWidth="40.0" prefWidth="73.0"/>
    </columnConstraints>
    <padding>
        <Insets left="20.0" right="20.0"/>
    </padding>
    <Label text="Login:"/>
    <TextField fx:id="login" GridPane.columnIndex="1"/>
    <Label text="Email:" GridPane.rowIndex="1"/>
    <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Password:" GridPane.rowIndex="2"/>
    <Label text="Enter password again:" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"/>
    <Button onAction="#registerUser" mnemonicParsing="false" prefHeight="25.0" prefWidth="157.0" text="Register"
            GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"
            GridPane.valignment="CENTER"/>
    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordRepeated" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>
